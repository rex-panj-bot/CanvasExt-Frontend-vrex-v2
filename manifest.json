{
  "manifest_version": 3,
  "name": "AI Assistant for Canvas Courses",
  "version": "1.0.2",
  "description": "Extract and organize course materials from Canvas LMS to use with an AI study assistant.",
  "permissions": [
    "storage",
    "downloads",
    "cookies"
  ],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://*.canvas.com/*",
    "https://web-production-9aaba7.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup-v2.html",
    "default_icon": {
      "16": "icons/logo-light-16.png",
      "48": "icons/logo-light-48.png",
      "128": "icons/logo-light-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/courses/*",
        "https://*.canvas.com/courses/*"
      ],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/logo-light-16.png",
    "48": "icons/logo-light-48.png",
    "128": "icons/logo-light-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/jszip.min.js",
        "lib/marked.min.js",
        "lib/pdf.min.js",
        "lib/pdf.worker.min.js",
        "lib/mammoth.browser.min.js"
      ],
      "matches": [
        "https://*.instructure.com/*",
        "https://*.canvas.com/*"
      ]
    }
  ]
}